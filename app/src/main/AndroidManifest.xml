<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".WeatherActivity"
            android:label="Weather Forecast"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".MarketPricesActivity"
            android:label="Market Prices"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".GovernmentSchemesActivity"
            android:label="Government Schemes"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".MarketplaceActivity"
            android:label="Marketplace"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".CommunityActivity"
            android:label="Farmer Community"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".KnowledgeActivity"
            android:label="Knowledge Base"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>